{
	"name": "react-native-ui-boilerplate",
	"version": "0.0.1",
	"description": "A boilerplate with hooks state management, end2end testing with cypress and storybook, debugable in the browser with consistent looking with native",
	"main": "index.js",
	"scripts": {
		"cy:open": "cypress open",
		"cy:run": "cypress run",
		"cy:watch": "nodemon -e js,jsx,ts,tsx,css,scss --exec cypress run",
		"storybook": "start-storybook -p 39000",
		"test:wunit": "jest --watchAll",
		"test:unit": "jest",
		"test:integration": "start-server-and-test storybook http://localhost:39000 cy:run"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Fr33maan/react-native-ui-boilerplate.git"
	},
	"keywords": [
		"react-native",
		"react hooks",
		"cypress",
		"storybook",
		"end2end testing",
		"unit testing",
		"testing",
		"react-native-web"
	],
	"author": "Fr33maan",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Fr33maan/react-native-ui-boilerplate/issues"
	},
	"homepage": "https://github.com/Fr33maan/react-native-ui-boilerplate#readme",
	"devDependencies": {
		"@babel/core": "^7.11.1",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-transform-runtime": "^7.11.0",
		"@babel/preset-env": "^7.11.0",
		"@babel/preset-react": "^7.10.4",
		"@babel/preset-typescript": "^7.10.4",
		"@babel/runtime": "^7.11.2",
		"@storybook/preset-scss": "^1.0.2",
		"@storybook/preset-typescript": "^3.0.0",
		"@storybook/react": "^5.3.19",
		"@testing-library/react": "^10.4.7",
		"@testing-library/react-hooks": "^3.4.1",
		"@types/jest": "^26.0.8",
		"@types/react": "^16.9.44",
		"@types/react-native": "^0.63.3",
		"@typescript-eslint/eslint-plugin": "^3.7.1",
		"@typescript-eslint/parser": "^3.7.1",
		"babel-jest": "^26.2.2",
		"babel-loader": "^8.1.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"babel-preset-react-app": "^9.1.2",
		"core-js": "3.6.5",
		"css-loader": "^4.2.0",
		"cypress": "^4.12.1",
		"cypress-log-to-output": "^1.0.8",
		"eslint": "^7.6.0",
		"eslint-plugin-react-hooks": "^4.0.8",
		"jest": "^26.2.2",
		"node-sass": "^7.0.0",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5",
		"prettier-standard": "^16.4.1",
		"react": "16.13.1",
		"react-content-loader": "^5.1.1",
		"react-dom": "16.13.1",
		"react-test-renderer": "16.13.1",
		"sass-loader": "^8.0.2",
		"start-server-and-test": "^1.11.3",
		"style-loader": "^1.1.4",
		"typescript": "^3.9.7"
	}
}